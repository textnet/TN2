{
  "name": "TN2",
  "version": "0.0.1",
  "private": true,
  "description": "TN2 Node",
  "main": "dist/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",

    "build": "webpack --config webpack.electron.js  --mode development",

    "prestart": "yarn run build",
    "start": "electron . debug",

    "preheadless": "yarn run build",
    "headless": "node dist/headless.js",

    "predist": "yarn run builddist",
    "builddist": "webpack --config webpack.electron.js  --mode production",
    "dist": "electron-builder",

    "pack": "electron-builder --dir",
    "rebuild": "electron-rebuild"
  },
  "build": {
    "appId": "com.electron.textnet",
    "productName": "TN2",
    "directories": {
      "output": "apps/"
    },
    "files": [
      "!apps/*"
    ],
    "mac": {
      "category": "public.app-category.games"
    }
  },
  "author": "Project ABOVE",
  "license": "BSD-2-Clause",
  "devDependencies": {
    "clean-webpack-plugin": "3.0.0",
    "compression-webpack-plugin": "^3.0.1",
    "copy-webpack-plugin": "^5.1.1",
    "dat-swarm-defaults": "^1.0.2",
    "discovery-swarm": "^6.0.1",
    "electron": "^7.1.7",
    "electron-builder": "^21.2.0",
    "electron-packager": "^14.1.1",
    "electron-rebuild": "^1.8.8",
    "fengari-loader": "0.0.1",
    "fengari-web": "^0.1.4",
    "file-loader": "4.2.0",
    "get-port": "^5.1.0",
    "html-webpack-plugin": "3.2.0",
    "node-persist": "^3.0.5",
    "raw-loader": "^4.0.0",
    "source-map-loader": "0.2.4",
    "standard": "^14.3.1",
    "standard-loader": "^7.0.0",
    "terser-webpack-plugin": "^2.3.1",
    "ts-loader": "6.2.1",
    "typescript": "3.7.2",
    "uglifyjs-webpack-plugin": "2.2.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "3.9.0",
    "webpack-merge": "4.2.2"
  },
  "dependencies": {
    "@types/better-sqlite3": "^5.4.0",
    "@types/jquery": "^3.3.31",
    "better-sqlite3": "^5.4.3",
    "brace": "^0.11.1",
    "excalibur": "0.23.0",
    "jquery": "^3.4.1",
    "lowdb": "^1.0.0",
    "ste-events": "^1.6.4",
    "ste-simple-events": "^1.6.4",
    "strongly-typed-events": "^1.6.4"
  }
}
